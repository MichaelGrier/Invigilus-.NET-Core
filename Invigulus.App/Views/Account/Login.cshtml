@model Invigulus.Data.Domain.Examinee
@{
    ViewData["Title"] = "Login";
}

    <div class="container">
        <h4 style="padding-top:6rem; padding-bottom:.75rem; text-align:center">Login</h4>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ExamineeId" class="control-label"></label>
                        <input asp-for="ExamineeId" class="form-control" />
                        <span asp-validation-for="ExamineeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExamineeEmail" class="control-label"></label>
                        <input asp-for="ExamineeEmail" class="form-control" />
                        <span asp-validation-for="ExamineeEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Login" class="btn btn-light" />
                    </div>
                </form>
            </div>
        </div>
    </div>
